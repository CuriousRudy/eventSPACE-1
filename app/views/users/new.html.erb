<h3 class="center">Sign up for EventSPACE!</h3>
<div class="error-messages">
  <ul>
  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |m| %>
  <li><%= m %></li>
  <% end %>
  <% end %>
</ul>
</div>

<%= form_for @user do |f|  %>
  <%= f.label :email, "Email" %><br>
  <%= f.text_field :email %><br>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br>
  <%= f.label :password, "Password" %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, "Re-enter Password" %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.label :birthday, "Birthday" %><br>
  <%= f.date_field :birthday %><br>
  <%= f.label :profile, "Profile Photo" %>
  <%= f.file_field :profile %><br><br>
  <%= f.label :embed, "Embedded SoundCloud Player" %><br>
  <%= f.text_area :embed, placeholder: "You can paste the embedded SoundCloud player code here (set height to 150):"%><br>
  <%= f.label :bio, "Tell us about yourself."%><br>
  <%= f.text_area :bio, placeholder: "Tell us something we DON'T know..." %><br>
  <br>
  <%= f.submit "Sign Up!", class: "btn waves-effect waves-light cyan lighten-1"%>
<% end %>
